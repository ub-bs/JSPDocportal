<?xml version="1.0" encoding="ISO-8859-1"?>
<imports>
      <!-- *** Text fields *** -->
      <textfield id="TFzeile10" width="10" maxlength="10" />
      <textfield id="TFzeile32" width="32" maxlength="32" />
      <textfield id="TFzeile64" width="48" maxlength="64" />
      <textfield id="TFzeile128" width="64" maxlength="128" />
      <textfield id="TFzeile1024" width="64" maxlength="1024" />
      <!-- *** Text area *** -->
      <textarea id="TFarea4096" width="62" height="3" maxlength="4096" />
      
      <textfield  id="TFAllMetadata"  width="48" maxlength="64"  >
         <condition id="cond.minlength" minLength="3" required="true" >
             <label i18n="Editor.Validate.minlength" />
         </condition>
      </textfield> 
      
      <!-- *** Language List *** -->
      <list id="Slang" width="60" type="dropdown">
            <item value="de">
                  <label xml:lang="de">de</label>
            </item>
            <item value="en">
                  <label xml:lang="de">en</label>
            </item>
      </list>
      <!-- *** Data for the buttons ** -->
      <submitButton id="BSubmit" width="150px" >
            <label i18n="Editor.Search.Button.submit"/>
      </submitButton>
      <cancelButton id="BCancel" width="150px" >
            <label i18n="Editor.Search.Button.cancel" />
      </cancelButton>
      <panel id="SearchTwoButtons">
            <cell col="1" row="1" anchor="WEST" ref="BCancel" />
            <cell col="2" row="1" anchor="WEST" ref="BSubmit" var="search" />
      </panel>
      <panel id="SearchButton">
            <cell col="2" row="1" anchor="WEST" ref="BSubmit" var="search" />
      </panel>      
      <!-- *** Data for the hosts ** -->
      <text id="LInstances">
            <label i18n="Editor.Search.Label.instances" />
      </text>
      <panel id="DInstances">
            <cell col="1" row="1" anchor="NORTHWEST" var="hosts/host[1]/@field">
                  <checkbox value="local" checked="true" label="local" />
            </cell>
            <cell col="2" row="1" anchor="NORTHWEST" var="hosts/host[2]/@field">
                  <checkbox value="selfremote" checked="false" label="entfernt" />
            </cell>            
      </panel>
      <helpPopup id="HInstances" width="400px" >
            <label i18n="Editor.Search.Help.instances" />l>
      </helpPopup>
      <!-- *** Data for the Institution ** -->
      <text id="LInstitution">
