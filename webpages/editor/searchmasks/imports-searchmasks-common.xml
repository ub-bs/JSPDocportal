            </item>
            <include cacheable="false" uri="localclass:org.mycore.frontend.editor.helper.MCRGetEditorElements?mode=getClassificationInItems&amp;prop=MCR.ClassificationID.Institution&amp;emptyLeafs=no&amp;defaultValue=DocPortal_class_00000002" />                                      
      </list>       
